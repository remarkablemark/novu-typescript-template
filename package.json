{
  "name": "novu-typescript-template",
  "version": "1.0.0-alpha",
  "description": "Express API template.",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "build/bin/www.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf build coverage tsconfig*.tsbuildinfo",
    "dev": "run-p dev:*",
    "dev:api": "DEBUG=novu-typescript-template:* nodemon src/bin/www.ts",
    "dev:novu": "novu dev",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc --noEmit",
    "prepare": "husky",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "test": "jest --watch",
    "test:ci": "CI=true jest --coverage --colors --ci"
  },
  "dependencies": {
    "@novu/framework": "2.9.0",
    "compression": "1.8.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.6",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "helmet": "8.1.0",
    "morgan": "1.10.1",
    "pm2": "6.0.14",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@eslint/compat": "2.0.2",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@types/compression": "1.8.1",
    "@types/cookie-parser": "1.4.10",
    "@types/cors": "2.8.19",
    "@types/debug": "4.1.12",
    "@types/express": "5.0.6",
    "@types/jest": "30.0.0",
    "@types/morgan": "1.9.10",
    "@types/node": "25.2.1",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "9.39.2",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "nodemon": "3.1.11",
    "novu": "2.7.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.1",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "private": true,
  "license": "MIT"
}
