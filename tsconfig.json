{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "incremental": true
  },
  "exclude": [
    "__mocks__",
    "jest.config.ts",
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
